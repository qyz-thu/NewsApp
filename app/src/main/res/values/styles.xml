<resources>

    <!-- Base application theme. -->
    <!--    android:Theme.Holo-->
    <style name="AppThemeLight" parent="@style/Theme.MaterialComponents.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <!--
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        -->
    </style>

    <style name="AppThemeDark" parent="@style/Theme.MaterialComponents">
        <item name="android:windowTitleSize">50dp</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <!--
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        -->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DrawerTextTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewsDetailTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarSize">40dp</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat">
        <item name="actionBarSize">40dp</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="actionBar" parent="Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@style/actionBar.textStyle</item>
    </style>

    <style name="actionBar.textStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
